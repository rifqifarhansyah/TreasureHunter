<Window x:Class="TreasureHunterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreasureHunterApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="735.6" Width="1280" ResizeMode="NoResize">
    <Grid x:Name="mainWindowGrid" Background="#FF16151A">
        <Grid.RowDefinitions>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="275*"/>
            <RowDefinition Height="38*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="346*"/>
            <ColumnDefinition Width="934*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Stroke="Black" Margin="10,10,10,10" Fill="#FF25262A" Grid.Row="1"/>
        <Rectangle Stroke="Black" Margin="10,10,10,10" Fill="#FF25262A" Grid.Row="1" Grid.Column="1"/>
        <Rectangle Stroke="Black" Margin="10,10,10,10" Fill="#FF25262A" Grid.ColumnSpan="2"/>
        <TextBlock TextWrapping="Wrap" Text="Treasure Hunter" VerticalAlignment="Center" Height="86" Foreground="#FFEDE6E6" FontSize="56" Margin="84,0,0,0" Grid.Column="1" HorizontalAlignment="Left" Width="420"/>
        <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" Height="57" Foreground="#FFEDE6E6" FontSize="32" Margin="42,25,0,0" HorizontalAlignment="Left" Width="96" Grid.Row="1"><Run Text="Input"/><LineBreak/><Run/></TextBlock>
        <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" Height="57" Foreground="#FFEDE6E6" FontSize="32" Margin="39,25,0,0" HorizontalAlignment="Left" Width="123" Grid.Row="1" Grid.Column="1" Text="Output"/>
        <Button x:Name="fileButton" Content="Choose File" HorizontalAlignment="Center" Margin="0,104,0,0" Grid.Row="1" VerticalAlignment="Top" Click="fileButton_Click" Height="76" Width="264" BorderBrush="#FF7B5BED" Background="#FF25262A" Foreground="#FF7B5BED" FontSize="24"/>
        <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Foreground="#FF7A7776" FontSize="18" Margin="42,185,0,0" HorizontalAlignment="Left" Width="144" Grid.Row="1" Text="No File Chosen"/>
        <RadioButton x:Name="bfs_radio" Content="BFS" HorizontalAlignment="Left" Height="31" Margin="42,279,0,0" Grid.Row="1" VerticalAlignment="Top" Width="67" Checked="RadioButton_Checked" Foreground="#FFEDE6E6" FontSize="18" RenderTransformOrigin="0.745,-2.893"/>
        <RadioButton x:Name="dfs_radio" Content="DFS&#xD;&#xA;" HorizontalAlignment="Left" Height="25" Margin="41,310,0,0" Grid.Row="1" VerticalAlignment="Top" Width="65" Checked="RadioButton_Checked" Foreground="#FFEDE6E6" FontSize="18" RenderTransformOrigin="-0.52,-2.261"/>
        <TextBlock TextWrapping="Wrap" VerticalAlignment="Center" Height="34" Foreground="#FFEDE6E6" FontSize="20" Margin="42,0,0,0" HorizontalAlignment="Left" Width="144" Grid.Row="1" Text="Algorithm"/>
        <CheckBox x:Name="tsp_check" Content="TSP" HorizontalAlignment="Left" Height="26" Margin="42,365,0,0" Grid.Row="1" VerticalAlignment="Top" Width="67" Checked="CheckBox_Checked" Foreground="#FFEDE6E6" FontSize="18"/>
        <Button Content="Visualize" HorizontalAlignment="Center" Margin="0,409,0,0" Grid.Row="1" VerticalAlignment="Top" Click="visualizeButton_Click" Height="59" Width="227" BorderBrush="#FF7B5BED" Background="#FF7B5BED" Foreground="#FFEDE6E6" FontSize="24"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="251,409,0,0" Grid.Row="1" VerticalAlignment="Top" Click="searchButton_Click" Height="59" Width="227" BorderBrush="#FF7B5BED" Background="#FF7B5BED" Foreground="#FFEDE6E6" FontSize="24" Grid.Column="1"/>
        <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" Height="34" Foreground="#FFEDE6E6" FontSize="20" Margin="677,76,0,0" HorizontalAlignment="Left" Width="144" Grid.Row="1" Grid.Column="1"><Run Text="Route"/><LineBreak/><Run/></TextBlock>
        <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" Height="34" Foreground="#FFEDE6E6" FontSize="20" Margin="677,343,0,0" HorizontalAlignment="Left" Width="144" Grid.Row="1" Grid.Column="1"><Run Text="Nodes: -"/><LineBreak/><Run/></TextBlock>
        <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" Height="34" Foreground="#FFEDE6E6" FontSize="20" Margin="677,390,0,0" HorizontalAlignment="Left" Width="144" Grid.Row="1" Grid.Column="1"><Run Text="Steps: -"/><LineBreak/><Run/></TextBlock>
        <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" Height="34" Foreground="#FFEDE6E6" FontSize="20" Margin="677,438,0,0" HorizontalAlignment="Left" Width="218" Grid.Row="1" Grid.Column="1"><Run Text="Elapsed Time: -"/><LineBreak/><Run/></TextBlock>
        <Grid x:Name="mazeGrid" Grid.Column="1" HorizontalAlignment="Left" Height="287" Margin="100,91,0,0" Grid.Row="1" VerticalAlignment="Top" Width="530" Background="#FFABABAB">

        </Grid>
    </Grid>
</Window>
